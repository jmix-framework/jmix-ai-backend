<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://chatView.title">
    <facets>
        <urlQueryParameters id="urlQueryParameters"/>
    </facets>
    <layout>
        <textArea id="userMessageField" height="10em" width="100%">
            <suffix>
                <button id="copyToClipboardButton" icon="CLIPBOARD" title="Copy to clipboard"
                        themeNames="tertiary-inline" tabIndex="-1"/>
            </suffix>
        </textArea>
        <hbox width="100%" alignItems="CENTER">
            <button id="sendButton" text="Send" themeNames="primary"/>
            <button id="newChatButton" text="New chat"/>
            <span text="Parameters"/>
            <entityPicker id="parametersPicker" metaClass="Parameters" required="true" width="100%">
                <actions>
                    <action id="lookupAction" type="entity_lookup">
                        <properties>
                            <property name="viewId" value="Parameters.list"/>
                        </properties>
                    </action>
                    <action id="openAction" type="entity_open">
                        <properties>
                            <property name="viewId" value="Parameters.detail"/>
                        </properties>
                    </action>
                </actions>
            </entityPicker>
        </hbox>
        <scroller id="scroller" width="100%">
            <vbox id="responseBox" width="100%"/>
        </scroller>
    </layout>
</view>