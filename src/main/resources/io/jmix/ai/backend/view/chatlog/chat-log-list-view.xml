<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://chatLogListView.title"
      focusComponent="chatLogsDataGrid">
    <data>
        <collection id="chatLogsDc"
                    class="io.jmix.ai.backend.entity.ChatLog">
            <fetchPlan extends="_base"/>
            <loader id="chatLogsDl" readOnly="true">
                <query>
                    <![CDATA[select e from ChatLog e order by e.createdDate desc]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
            <genericFilter component="filter"/>
        </urlQueryParameters>
        <settings auto="true"/>
    </facets>
    <layout>
        <genericFilter id="filter" dataLoader="chatLogsDl">
            <properties include=".*"/>
            <configurations>
                <configuration id="configurationByConversationId" name="By conversation id">
                    <propertyFilter operation="EQUAL" property="conversationId"/>
                </configuration>
            </configurations>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button action="chatLogsDataGrid.readAction"/>
            <simplePagination id="pagination" dataLoader="chatLogsDl"/>
        </hbox>
        <dataGrid id="chatLogsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="chatLogsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="readAction" type="list_read"/>
                <action id="refreshAction" type="list_refresh"/>
                <action id="filterByConversationAction" type="list_itemTracking" text="Filter by this conversation"/>
            </actions>
            <columns resizable="true">
                <column property="createdDate"/>
                <column property="conversationId"/>
                <column property="promptTokens"/>
                <column property="completionTokens"/>
                <column property="responseTime"/>
                <column property="content" sortable="false"/>
                <column property="sources" sortable="false"/>
            </columns>
        </dataGrid>
    </layout>
</view>
