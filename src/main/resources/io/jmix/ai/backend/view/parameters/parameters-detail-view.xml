<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://parametersDetailView.title"
      focusComponent="form">
    <data>
        <instance id="parametersEntityDc"
                  class="io.jmix.ai.backend.entity.Parameters">
            <fetchPlan extends="_base"/>
            <loader id="parametersEntityDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="parametersEntityDc">
            <responsiveSteps>
                <responsiveStep minWidth="0px" columns="1"/>
            </responsiveSteps>
            <hbox alignItems="CENTER">
                <textField id="descriptionField" property="description" width="20em" placeholder="Description"/>
                <checkbox id="useToolsField" property="useTools" label="Use tools"/>
            </hbox>
            <textArea id="systemMessageField" height="20em" property="systemMessage" colspan="2">
                <suffix>
                    <button id="copyToClipboardButton" icon="CLIPBOARD" title="Copy to clipboard"
                            themeNames="tertiary-inline" tabIndex="-1"/>
                </suffix>
            </textArea>
            <details summaryText="Docs tool" opened="true">
                <hbox width="100%">
                    <textArea id="docsToolDescriptionField" property="docsToolDescription" height="10em" width="40em" label="Description"/>
                    <textField id="docsToolSimilarityThresholdField" property="docsToolSimilarityThreshold" label="Similarity threshold"/>
                    <textField id="docsToolTopKField" property="docsToolTopK" label="Top K"/>
                </hbox>
            </details>
            <details summaryText="UI Samples tool" opened="true">
                <hbox width="100%">
                    <textArea id="uiSamplesToolDescriptionField" property="uiSamplesToolDescription" height="10em" width="40em" label="Description"/>
                    <textField id="uiSamplesToolSimilarityThresholdField" property="uiSamplesToolSimilarityThreshold" label="Similarity threshold"/>
                    <textField id="uiSamplesToolTopKField" property="uiSamplesToolTopK" label="Top K"/>
                </hbox>
            </details>
            <details summaryText="Trainings tool" opened="true">
                <hbox width="100%">
                    <textArea id="trainingsToolDescriptionField" property="trainingsToolDescription" height="10em" width="40em" label="Description"/>
                    <textField id="trainingsToolSimilarityThresholdField" property="trainingsToolSimilarityThreshold" label="Similarity threshold"/>
                    <textField id="trainingsToolTopKField" property="trainingsToolTopK" label="Top K"/>
                </hbox>
            </details>
            <details summaryText="RAG" colspan="2" width="100%">
                <textField id="similarityThresholdField" property="similarityThreshold"/>
                <textField id="topKField" property="topK"/>
            </details>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
