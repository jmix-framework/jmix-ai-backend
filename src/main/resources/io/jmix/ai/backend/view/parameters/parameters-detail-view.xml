<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://parametersDetailView.title"
      focusComponent="contentField">
    <data>
        <instance id="parametersEntityDc"
                  class="io.jmix.ai.backend.entity.Parameters">
            <fetchPlan extends="_base"/>
            <loader id="parametersEntityDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAndCloseAction" type="detail_saveClose" text="Save and close"/>
        <action id="saveAction" type="detail_save"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <hbox id="detailActions" width="100%" alignItems="CENTER">
            <startSlot>
                <fileUploadField id="uploadField" acceptedFileTypes=".yml, .yaml" uploadIcon="vaadin:upload"/>
                <button id="copyToClipboardButton" icon="CLIPBOARD" text="Copy to clipboard"/>
            </startSlot>
            <endSlot>
                <checkbox label="Active" dataContainer="parametersEntityDc" property="active" readOnly="true"/>
                <button id="saveAndCloseButton" action="saveAndCloseAction"/>
                <button id="saveButton" action="saveAction"/>
                <button id="closeButton" action="closeAction"/>
            </endSlot>
        </hbox>
        <codeEditor id="contentField" property="content" dataContainer="parametersEntityDc" height="100%" width="100%"
                    mode="YAML" textWrap="true" fontSize="0.9rem"/>
    </layout>
</view>
