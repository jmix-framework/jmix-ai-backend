<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://vectorStoreEntityListView.title"
      focusComponent="vectorStoreDataGrid">
    <data>
        <collection id="vectorStoreDc"
                    class="io.jmix.ai.backend.entity.VectorStoreEntity">
            <loader id="vectorStoreDl" readOnly="true"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox alignItems="CENTER" width="100%">
            <span text="Metadata filter:" minWidth="8em"/>
            <textField id="filterField" width="100%" datatype="string">
                <suffix>
                    <button id="filterHelpButton" themeNames="tertiary-inline" icon="vaadin:question-circle-o"/>
                </suffix>
            </textField>
        </hbox>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <comboButton id="updateButton" text="Update"/>
<!--            <button id="createButton" action="vectorStoreDataGrid.createAction"/>-->
<!--            <button id="editButton" action="vectorStoreDataGrid.editAction"/>-->
            <button id="readButton" action="vectorStoreDataGrid.readAction"/>
            <button id="removeButton" action="vectorStoreDataGrid.removeAction"/>
            <button id="removeAllButton" text="Remove All" themeNames="warning"/>
            <button id="refreshButton" action="vectorStoreDataGrid.refreshAction"/>
            <simplePagination id="pagination" dataLoader="vectorStoreDl"/>
        </hbox>
        <dataGrid id="vectorStoreDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="vectorStoreDc"
                  columnReorderingAllowed="true">
            <actions>
<!--                <action id="createAction" type="list_create" actionVariant="DEFAULT"/>-->
<!--                <action id="editAction" type="list_edit"/>-->
                <action id="readAction" type="list_read"/>
                <action id="removeAction" type="list_remove"/>
                <action id="refreshAction" type="list_refresh"/>
            </actions>
            <columns resizable="true">
                <column property="id"/>
                <column property="content"/>
                <column property="metadata"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
